@model WebBanHang.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "_Layout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Product Details</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/Admin/Products">Products</a></li>
        <li class="breadcrumb-item active">Details</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Product Information
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-4">Stock</dt>
                        <dd class="col-sm-8">@Model.Stock</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <h5>Product Images</h5>
                    <div class="row">
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            @foreach (var image in Model.Images)
                            {
                                <div class="col-md-4 mb-3">
                                    <img src="@image.Url" class="img-fluid rounded" alt="@Model.Name" />
                                </div>
                            }
                        }
                        else
                        {
                            <p>No images available</p>
                        }
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Products" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>