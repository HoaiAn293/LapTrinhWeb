}

<div class="container-fluid px-0">
    <div class="hero-section position-relative" style="background-image: url('/images/Background-sach-background-book-800x488.jpg'); background-size: cover; background-position: center; height: 600px;">
        <div class="overlay position-absolute " style="background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.5))"></div>
        <div class="hero-content position-absolute w-100 h-100 d-flex align-items-center justify-content-center text-center text-white">
            <div>
