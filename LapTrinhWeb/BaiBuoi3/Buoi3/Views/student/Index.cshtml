@model Buoi3.Models.StudentModel

<style>
    form {
        max-width: 500px;
        margin: 30px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    h2 {
        text-align: center;
        margin-bottom: 20px;
    }

    div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input, select {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    button {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>

<h2>Đăng ký chuyên ngành</h2>

<form asp-action="KQ" method="post">
    <div>
        <label>MSSV:</label>
        <input asp-for="MSSV" required />
    </div>
    <div>
        <label>Họ tên:</label>
        <input asp-for="HoTen" required />
    </div>
    <div>
        <label>Điểm TB:</label>
        <input asp-for="DiemTB" type="number" step="0.01" required />
    </div>
    <div>
        <label>Chuyên ngành:</label>
        <select asp-for="ChuyenNganh" required>
            <option value="">-- Chọn chuyên ngành --</option>
            <option value="CNPM">CNPM</option>
            <option value="HTTT">HTTT</option>
            <option value="ANM">ANM</option>
            <option value="TTNT">TTNT</option>
            <option value="MMT">MMT</option>
        </select>
    </div>
    <button type="submit">Đăng ký</button>
</form>
